<div>
<h1>Book detail</h1>
<br>
<%= image_tag @book.user.get_profile_image(100,100) %>
<%= @book.user.name %>
<%= @book.title %>
<%= @book.body %>
<p><%= link_to "Edit",edit_book_path(@book) %></p>
<% if @book.user==current_user %>
<%= link_to "Destroy",book_path(@book),method: :delete %>
<% end %>
</div>