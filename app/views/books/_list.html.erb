<% books.each do |book| %>

<h1>Books</h1>
<div>
<%= link_to books_path do %>
  <%= image_tag book.user.get_profile_image(100,100) %>
<% end %>
 <p>Title:
  <%= link_to book_path(book.id) do %>
  <%= book.title %>
  <% end %></p>
<p>Opinion<%= book.body %></p>
</div>

<% end %>

<%= render 'list',books:@books %>